<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="@dimen/end_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/homeless_cv_image"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/content_description"
                android:layout_gravity="center" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margins">

                <TextView
                    android:id="@+id/homeless_username_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:textSize="@dimen/title"
                    android:drawablePadding="@dimen/padding"
                    android:drawableStart="@drawable/username_drawable"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="@string/hcv_username"/>

                <TextView
                    android:id="@+id/homeless_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:drawableStart="@drawable/phone_drawable"
                    android:drawablePadding="@dimen/padding"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:textSize="@dimen/body"
                    android:text="@string/hcv_phone"/>

                <TextView
                    android:id="@+id/homeless_birthday_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:drawablePadding="@dimen/padding"
                    android:textSize="@dimen/body"
                    android:drawableStart="@drawable/birthday_drawable"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:text="@string/hcv_birthday"/>

                <TextView
                    android:id="@+id/homeless_lifeHistory_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:drawablePadding="@dimen/padding"
                    android:textSize="@dimen/body"
                    android:drawableStart="@drawable/life_history_drawable"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:text="@string/hcv_life_history"/>

                <TextView
                    android:id="@+id/homeless_locationAddress_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:drawablePadding="@dimen/padding"
                    android:textSize="@dimen/body"
                    android:drawableStart="@drawable/create_homeless_location"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:text="@string/hcv_address"/>

                <TextView
                    android:id="@+id/homeless_schedule_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:drawablePadding="@dimen/padding"
                    android:textSize="@dimen/body"
                    android:drawableStart="@drawable/schedule_icon"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:text="@string/hcv_schedule"/>


                <TextView
                    android:id="@+id/homeless_need_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin"
                    android:drawablePadding="@dimen/padding"
                    android:textSize="@dimen/body"
                    android:drawableStart="@drawable/create_homeless_needs"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:text="@string/hcv_need"/>

            </LinearLayout>



        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>