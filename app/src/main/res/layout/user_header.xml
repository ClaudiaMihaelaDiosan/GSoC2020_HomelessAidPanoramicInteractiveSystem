<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:gravity="bottom">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_user"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="@dimen/bottom_margin"/>

            <TextView
                android:id="@+id/user_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body"
                android:layout_marginStart="@dimen/start_margin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="@string/text"/>

            <TextView
                android:id="@+id/user_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/start_margin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/body"
                android:text="@string/text"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="@string/user_profile_info"
            android:layout_marginBottom="@dimen/bottom_margin"/>


        <TextView
            android:id="@+id/user_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:drawableStart="@drawable/username_drawable"
            android:drawableTint="@color/white"
            android:textStyle="bold"
            android:drawablePadding="@dimen/padding"
            android:textColor="@color/white"
            android:textSize="@dimen/body"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/user_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:drawableStart="@drawable/email_drawable"
            android:drawableTint="@color/white"
            android:textStyle="bold"
            android:drawablePadding="@dimen/padding"
            android:textSize="@dimen/body"
            android:textColor="@color/white"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/user_phone_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text"
            android:drawableStart="@drawable/phone_drawable"
            android:drawableTint="@color/white"
            android:textStyle="bold"
            android:drawablePadding="@dimen/padding"
            android:textSize="@dimen/body"
            android:textColor="@color/white"
            tools:targetApi="m" />
    </LinearLayout>

</LinearLayout>