<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/aboutDocHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:drawableStart="@drawable/info_icon"
        android:drawablePadding="@dimen/padding"
        android:drawableTint="@color/black"
        android:text="@string/lg_about_info" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/aboutDocHeader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:drawablePadding="@dimen/padding"
        android:drawableStart="@drawable/contact_icon"
        android:drawableTint="@color/black"
        android:text="@string/lg_about_contact" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/aboutDocHeader3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/top_margin"
        android:drawablePadding="@dimen/padding"
        android:drawableStart="@drawable/github_icon"
        android:drawableTint="@color/black"
        android:text="@string/lg_about_github" />

    <TextView
        android:id="@+id/aboutDocHeader4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/top_margin"
        android:drawablePadding="@dimen/padding"
        android:text="@string/lg_about_thanks" />

</LinearLayout>


